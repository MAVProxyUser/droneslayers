<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_selected="false">
        <bitmap android:gravity="center" android:src="@drawable/lp_handle_mode_longexposure_16s_on" />
    </item>
    <item android:state_checked="false" android:state_selected="false">
        <bitmap android:gravity="center" android:src="@drawable/lp_handle_mode_longexposure_16s_off" />
    </item>
    <item android:state_checked="false" android:state_selected="true">
        <bitmap android:gravity="center" android:src="@drawable/lp_handle_mode_longexposure_16s_on" />
    </item>
</selector>